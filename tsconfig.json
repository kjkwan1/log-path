{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "paths": {
      "functions/*": ["./src/functions/*"],
      "interfaces/*": ["./src/interfaces/*"],
      "types/*": ["./src/types/*"],
      "services/*": ["./src/services/*"]
    }
  }
}
